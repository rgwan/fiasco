#pragma once

#include <l4/sys/vm.h>
#include <l4/sys/task>

namespace L4 {

/**
 * \brief SVM Virtual machine.
 * \ingroup l4_vm_svm_api
 */
class Vm : public Kobject_t<Vm, Task, L4_PROTO_VM>
{
protected:
  Vm();

private:
  Vm(Vm const &);
  void operator = (Vm const &);

public:
  /**
   * \copydoc l4_vm_run_svm()
   * \note \a dst_task is the implicit \a this pointer.
   */
   l4_msgtag_t run_svm(l4_fpage_t const &vmcb_fpage,
                       l4_vm_svm_gpregs *gpregs,
                       l4_utcb_t *utcb = l4_utcb()) throw()
   { return l4_vm_run_svm_u(cap(), vmcb_fpage, gpregs, utcb); }
};

};
